package hello;

public class TicTacToeMain {

	public static void main(String[] args) {
		// Jeu du morpion à deux joueurs
		
		// 1) créer la classe grille suivant ces spécifications:
		TTTGrid grid = new TTTGrid();
		
		
		// void put (charn symbol, int x, int y)
		grid.put('x', 1, 2); // affiche un char, int x, int y
		grid.put('x', 0, 0);
		grid.put('x', 0, 1);
		
		// 2) sur la grille, créer une méthode print qui permet d'afficher la grille 
		grid.print();
		/*
-------------
| O |   |   |
-------------
| X |   |   |
-------------
|   | X |   |
-------------

		*/
	}

}
